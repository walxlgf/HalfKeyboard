<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/key_bg_normal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="horizontal" >

            <com.half.keyboard.widget.VerticalTextView
                    android:id="@+id/tv_special"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.25"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_primary_symbol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="A"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/normal_key_center_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_primary_letter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="B"
                        android:textColor="@color/primary"
                        android:textSize="@dimen/normal_key_center_text_size"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_secondary_symbol"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="C"
                        android:textColor="@color/space_lock"
                        android:textSize="@dimen/normal_key_center_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_secondary_letter"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="D"
                        android:textColor="@color/space_lock"
                        android:textSize="@dimen/normal_key_center_text_size"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal" >

            <TextView
                    android:id="@+id/tv_secondary_number"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@color/normal_key_bottom_right_bg"
                    android:gravity="center"
                    android:text="center"
                    android:textColor="@color/space_lock"
                    android:textSize="@dimen/normal_key_bottom_text_size" />

            <TextView
                android:id="@+id/tv_primary_number"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="2dp"
                android:layout_weight="1"
                android:background="@color/normal_key_bottom_right_bg"
                android:gravity="center"
                android:text="center"
                android:textColor="@color/primary"
                android:textSize="@dimen/normal_key_bottom_text_size" />

            <TextView
                    android:id="@+id/tv_function"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.6"
                    android:background="@color/number_lock"
                    android:gravity="center"
                    android:text="bottom"
                    android:textColor="@color/primary"
                    android:textSize="@dimen/normal_key_bottom_text_size" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>